#!/usr/bin/env bash

script_dir="$(cd $(dirname "$BASH_SOURCE[0]}") && pwd)"
filters=()
dry="0"

cd $script_dir
scripts=$(find ./runs -maxdepth 1 -mindepth 1 -executable -type f)

while [[ $# > 0 ]]; do
    if [[ "$1" == "--dry" ]]; then
        dry="1"
    else
        # Split comma-separated values and trim whitespace
        IFS=',' read -ra parts <<< "$1"
        for part in "${parts[@]}"; do
            trimmed="$(echo "$part" | xargs)"
            [[ -n "$trimmed" ]] && filters+=("$trimmed")
        done
    fi
    shift
done

log() {
    if [[ $dry == "1" ]]; then
        echo "[DRY_RUN]: $@"
    else
        echo "$@"
    fi
}

execute() {
    log "execute: $@"
    if [[ $dry == "1" ]]; then
        return
    fi

    "$@"
}

matches_filter() {
    local script="$1"
    if [[ ${#filters[@]} -eq 0 ]]; then
        return 0
    fi
    for f in "${filters[@]}"; do
        if echo "$script" | grep -q "$f"; then
            return 0
        fi
    done
    return 1
}

log "run: filters=${filters[*]}"

for script in $scripts; do
    if ! matches_filter "$script"; then
        continue
    fi
    log "running script: $script"
    execute ./$script
done

